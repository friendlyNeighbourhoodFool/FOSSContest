<!DOCTYPE html>
<html>
<head>
	<title>IIIThub</title>
	<link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css" rel="stylesheet">

</head>
<body>

<nav class="navbar navbar-default">
	<div class="container-fluid">
		<div class="navbar-header">
			<a class="navbar-brand" href="/">IIIThub</a>	
		</div>
		<div class="collapse navbar-collapse">
			<ul class="nav navbar-nav navbar-right">
				<%if(!currentUser){%>
					<li><a href="/login">Login</a></li>
					<li><a href="/register">Sign up</a></li>
				<%}else{%>
					<li><a href="#"><%=currentUser.username%></a></li>
					<li><a href="/logout">Logout</a></li>
				<%}%>
			</ul>
		</div>
	</div>
</nav>

<div class="container">
	<% if(error && error.length > 0){ %>
	<div class="alert alert-danger" role="alert">
		<%=error%>
	</div>
	<% } %>
	<% if(success && success.length > 0){ %>
	<div class="alert alert-success" role="alert">
		<%=success%>
	</div>
	<% } %>
</div>

<div class="container">
<div class="row">
<h1 style="text-align:center;">Edit Comment</h1>
<div style="width:30%;margin:25px auto;">
<form action="/campgrounds/<%= campground_id %>/comments/<%=comment._id%>?_method=PUT" method="POST">
	<div class="form-group">
	<input type="text" name="comment[text]" value="<%=comment.text%>" class="form-control">
	</div>
	<div class="form-group">
	<button class="btn btn-lg btn-primary btn-block">Submit</button>
	</div>

</form>
<a href="/campgrounds">Go back</a>
</div>


</div>
</div>
</body>
</html>