<!DOCTYPE html>
<html>
<head>
	<title>IIIThub</title>
	<link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css" rel="stylesheet">
	<link rel="stylesheet" type="text/css" href="/stylesheets/main.css">
</head>
<body>

<nav class="navbar navbar-default">
	<div class="container-fluid">
		<div class="navbar-header">
			<a class="navbar-brand" href="/">IIIThub</a>	
		</div>
		<div class="collapse navbar-collapse">
			<ul class="nav navbar-nav navbar-right">
				<%if(!currentUser){%>
					<li><a href="/login">Login</a></li>
					<li><a href="/register">Sign up</a></li>
				<%}else{%>
					<li><a href="#"><%=currentUser.username%></a></li>
					<li><a href="/logout">Logout</a></li>
				<%}%>
			</ul>
		</div>
	</div>
</nav>

<div class="container">
	<% if(error && error.length > 0){ %>
	<div class="alert alert-danger" role="alert">
		<%=error%>
	</div>
	<% } %>
	<% if(success && success.length > 0){ %>
	<div class="alert alert-success" role="alert">
		<%=success%>
	</div>
	<% } %>
</div>

<div class="container">
<div class="row">
<h1 style="text-align:center;">Edit <%=campground.name%></h1>
<div style="width:30%;margin:25px auto;">
<form action="/campgrounds/<%=campground._id%>?_method=PUT" method="POST">
	<div class="form-group">
	<input type="text" name="campground[name]"  class="form-control" value="<%=campground.name%>">
	</div>
	<div class="form-group">
	<input type="number" name="campground[price]" value="<%=campground.price%>" class="form-control" min="0.01" step="0.01">
	</div>
	<div class="form-group">
	<input type="text" name="campground[image]"  class="form-control" value="<%=campground.image%>">
	</div>
	<div class="form-group">
	<input type="text" name="campground[description]"  class="form-control"  value="<%=campground.description%>">
	</div>
	<div class="form-group">
	<button class="btn btn-lg btn-primary btn-block">Submit</button>
	</div>

</form>
<a href="/campgrounds/<%=campground._id%>">Go back</a>
</div>


</div>
</div>
</body>
</html>